{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "projects": {
    "user-api": {
      "type": "application",
      "root": "apps/user-api",
      "entryFile": "main",
      "sourceRoot": "apps/user-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-api/tsconfig.app.json"
      }
    },
    "data-api": {
      "type": "application",
      "root": "apps/data-api",
      "entryFile": "main",
      "sourceRoot": "apps/data-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/data-api/tsconfig.app.json"
      }
    }
  }
}